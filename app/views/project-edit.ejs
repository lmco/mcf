<div class="container mbee-project">

  <hr class="mb-4">
  <div class="project-header">
    <h1 class="display-4"><%= project.name%></h1>
  </div>

  <form>
    <div class="form-group">
      <label for="name">Project Name</label>
      <input class="form-control" id="name" aria-describedby="emailHelp" placeholder="Project Name" data-placement="top" value="<%= project.name %>">
    </div>
    <div id="form-custom" class="form-group">
      <label for="custom">Custom Data</label>
      <textarea class="form-control" id="custom" rows="10" placeholder="Custom Data" data-toggle="popover" data-placement="top"><%= JSON.stringify(project.custom, null, 2) %></textarea>
    </div>
    <button id="subitForm"  type="button" class="btn btn-primary">Save</button>
    <a id="cancelForm" href="/<%= project.id %>" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<div id="save-warning" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" style="color: #222222;" >Save Failed</h4>
      </div>
      <div class="modal-body">
        <p style="color:#333;">Your changes to '<%= project.name %>' failed to save.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<%- contentFor('scripts') %>
<script>
  $(document).ready(function() {
    const nameRegex = /<%= validators.name %>/

    $('#name').on('input', function() {
      if (nameRegex.test($(this).val())) {
        $(this).css('box-shadow', '')
        $(this).popover('hide')
      }
      else {
        $(this).css('box-shadow', '0 0 0 0.2rem rgba(134, 47, 47, 1)')
        $(this).popover({
          trigger: 'manual',
          html: true,
          content: '<p style="color: #bb0002">The project name may only contain letters, numbers, space, or dashes</p>'
        })
        $(this).popover('show')
      }
    })

    $('#custom').on('input', function() {
      try {
        JSON.parse($("#custom").val())
        $(this).css('box-shadow', '')
        $(this).popover('hide')
      }
      catch {
        $(this).css('box-shadow', '0 0 0 0.2rem rgba(134, 47, 47, 1)')
        $(this).popover({
          trigger: 'manual',
          html: true,
          content: '<p style="color: #bb0002">Custom data must be valid JSON</p>'
        })
        $(this).popover('show')
      }
    })

    $('#subitForm').click(function() {
      if (!nameRegex.test($("#name").val())) {
        $('#name').effect('shake')
        return
      }
      try {
        JSON.parse($("#custom").val())
      }
      catch {
        $('#custom').effect('shake')
        return
      }

      jQuery.ajax({
        method: "PATCH",
        url: "<%= `/api/orgs/${project.org.id}/projects/${project.id}` %>",
        data: {name: $("#name").val(), custom: JSON.parse($("#custom").val())}
      })
      .done(function (msg, status) {
        window.location.replace('<%= `/${project.org.id}/${project.id}` %>');
      })
      .fail(function(msg) {
        $('#save-warning').modal('show');
      });
    });
  });
</script>
